// See https://containers.dev/implementors/json_reference/ for configuration reference
{
	"name": "YouRoutine React",
	"build": {
		"dockerfile": "Dockerfile"
	},
  "remoteUser": "node",
	"customizations" : {
    "jetbrains" : {
      "backend" : "WebStorm"
    }
  },
"mounts": [{"source": "${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig", "target": "/etc/gitconfig", "type": "bind"}],
  "containerEnv": {
    "DEV_SERVER_HOST": "0.0.0.0",
    "DEV_SERVER_PORT": "80"
  },
  "appPort": ["5173:80"],
  "postCreateCommand": "npm i"
}
